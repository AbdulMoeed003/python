#Test if two strings are balanced (all characters of one string are in the other)




#Find all occurrences of a substring in a given string, ignoring case.
txt = "Hello, welcome to my world."
x = txt.rindex("e")
print(x)


#Calculate the sum and average of digits present in a string
n1="345"
n2="455"
sum=n1+n2
l1=len(n1)
l2=len(n1)
average=int((l1+l2)/2)
print(sum)
print(average)



#write a program to count occurrences of all characters in a string.
str6="Hello, welcome to my world"
p=str6.count("",0,-1)
print(p)

#Reverse a given string.
str3="hello"
print(str3[::-1])


# Remove special symbols/punctuation from a string.
input_string = "Hello, World! This is @a test# string with $special^ symbols&."
print(input_string.replace("$special^",""))



# Remove all characters from a string except integers

input_string = "Hello, World! This is @a test# string with $special^ symbols&."
print(input_string.replace("Hello, World! This is @a test# string with $special^ symbols&.",""))


